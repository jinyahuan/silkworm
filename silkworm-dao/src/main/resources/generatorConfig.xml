<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!-- NOTICE: Reset location, e.g. location="E:\dev\studio\jinyahuan\silkworm\mysql-connector-java-5.1.40.jar" -->
    <classPathEntry location=""/>

    <context id="context1" targetRuntime="MyBatis3">
        <!-- Mybatis-Generator supplied plugins: http://www.mybatis.org/generator/reference/plugins.html
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/> -->

        <!-- https://github.com/WGKLoveStudy/mbg_lombok_plugin -->
        <plugin type="org.mybatis.generator.plugins.lombok.LombokPlugin">
            <property name="customLombok" value="@Builder,@AllArgsConstructor,@NoArgsConstructor,@Getter,@Setter"/>
        </plugin>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/silkworm_demo?useUnicode=true&amp;characterEncoding=UTF-8"
                userId="db_userName"
                password="db_userPwd"/>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="true"/>
            <property name="useJSR310Types" value="false"/>
        </javaTypeResolver>

        <!-- targetProject="D:\absolute_path\domain" -->
        <javaModelGenerator targetProject="./src/main/java"
                            targetPackage="cn.jinyahuan.tool.silkworm.domain.dte">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="false"/>
            <property name="immutable" value="false"/>
        </javaModelGenerator>
        <!-- ./src/main/resources -->
        <sqlMapGenerator targetProject="./src/main/java"
                         targetPackage="cn.jinyahuan.tool.silkworm.mapper">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>
        <javaClientGenerator targetProject="./src/main/java"
                             targetPackage="cn.jinyahuan.tool.silkworm.mapper"
                             type="XMLMAPPER">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table schema="database_name"
               tableName="t_tab1"
               domainObjectName="Table"
               mapperName="TableDao"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false">
            <property name="useActualColumnNames" value="false"/> <!-- (0..N) this elements -->
            <property name="modelOnly" value="false"/>

            <generatedKey column="id" sqlStatement="MySql" identity="true"/> <!-- (0..1) this elements -->
            <domainObjectRenamingRule searchString="^T" replaceString=""/> <!-- (0..1) this elements -->
            <columnRenamingRule searchString="^vf_" replaceString=""/> <!-- (0..1) this elements -->

            <columnOverride column="create_time"
                            property="createDate"
                            javaType="java.time.LocalDateTime"
                            jdbcType="TIMESTAMP"/> <!-- (0..N) this elements -->
            <columnOverride column="birthday" javaType="java.time.LocalDate" jdbcType="DATE"/>
            <columnOverride column="remark2" javaType="java.lang.String" jdbcType="VARCHAR" isGeneratedAlways="true"/>

            <ignoreColumn column="remark3"/> <!-- (0..N) this elements -->
        </table>
        <!-- tableName="%": % for all tables -->
        <table tableName="%"
               domainObjectName=""
               mapperName=""
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/> <!-- (0..1) this elements -->
            <domainObjectRenamingRule searchString="^T" replaceString=""/> <!-- (0..1) this elements -->
            <columnRenamingRule searchString="^vf_" replaceString=""/> <!-- (0..1) this elements -->

            <columnOverride column="create_time"
                            property="createDate"
                            javaType="java.time.LocalDateTime"
                            jdbcType="TIMESTAMP"/> <!-- (0..N) this elements -->
            <columnOverride column="birthday" javaType="java.time.LocalDate" jdbcType="DATE"/>
            <columnOverride column="remark2" javaType="java.lang.String" jdbcType="VARCHAR" isGeneratedAlways="true"/>

            <ignoreColumn column="remark3"/> <!-- (0..N) this elements -->
        </table>
    </context>
</generatorConfiguration>
