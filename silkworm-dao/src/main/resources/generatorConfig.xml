<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <properties resource="config.properties"/>

    <classPathEntry location="${mysql-connector.filepath}"/>

    <context id="context1" targetRuntime="MyBatis3">
        <!-- Mybatis-Generator supplied plugins: http://www.mybatis.org/generator/reference/plugins.html
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/> -->

        <!-- Overwriting *Mapper.xml files. -->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>

        <!-- https://github.com/WGKLoveStudy/mbg_lombok_plugin -->
        <plugin type="org.mybatis.generator.plugins.lombok.LombokPlugin">
            <property name="customLombok" value="@Getter,@Setter,@ToString"/>
        </plugin>

        <!-- https://github.com/itfsw/mybatis-generator-plugin -->
        <plugin type="com.itfsw.mybatis.generator.plugins.CommentPlugin">
            <property name="template" value="src/main/resources/default-comment.ftl" />
        </plugin>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection
                driverClass="${datasource.driverClassName}"
                connectionURL="${datasource.url}"
                userId="${datasource.username}"
                password="${datasource.password}">
            <property name="useInformationSchema" value="${datasource.url.param.useInformationSchema}"/>
            <property name="useUnicode" value="${datasource.url.param.useUnicode}"/>
            <property name="characterEncoding" value="${datasource.url.param.characterEncoding}"/>
            <property name="serverTimezone" value="${datasource.url.param.serverTimezone}"/>
            <property name="nullCatalogMeansCurrent" value="${datasource.url.param.nullCatalogMeansCurrent}"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="true"/>
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator targetProject="${generator.model.targetDirectory}"
                            targetPackage="${generator.model.targetPackage}">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="false"/>
            <property name="immutable" value="false"/>
        </javaModelGenerator>
        <sqlMapGenerator targetProject="${generator.mapper.xml.targetDirectory}"
                         targetPackage="${generator.mapper.xml.targetPackage}">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>
        <javaClientGenerator targetProject="${generator.mapper.java.targetDirectory}"
                             targetPackage="${generator.mapper.java.targetPackage}"
                             type="XMLMAPPER">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table schema="database_name"
               tableName="t_tab1"
               domainObjectName="Table"
               mapperName="TableDao"
               enableSelectByExample="true"
               enableCountByExample="true"
               enableDeleteByExample="false"
               enableUpdateByExample="false">
            <property name="useActualColumnNames" value="false"/> <!-- (0..N) this elements -->
            <property name="modelOnly" value="false"/>

            <generatedKey column="id" sqlStatement="MySql" identity="true"/> <!-- (0..1) this elements -->
            <domainObjectRenamingRule searchString="^T" replaceString=""/> <!-- (0..1) this elements -->
            <columnRenamingRule searchString="^vf_" replaceString=""/> <!-- (0..1) this elements -->

            <columnOverride column="create_time"
                            property="createDate"
                            javaType="java.time.LocalDateTime"
                            jdbcType="TIMESTAMP"/> <!-- (0..N) this elements -->
            <columnOverride column="birthday" javaType="java.time.LocalDate" jdbcType="DATE"/>
            <columnOverride column="remark2" javaType="java.lang.String" jdbcType="VARCHAR" isGeneratedAlways="true"/>

            <ignoreColumn column="remark3"/> <!-- (0..N) this elements -->
        </table>
        <!-- tableName="%": % for all tables -->
        <table tableName="%"
               domainObjectName=""
               mapperName=""
               enableSelectByExample="true"
               enableCountByExample="true"
               enableDeleteByExample="false"
               enableUpdateByExample="false">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/> <!-- (0..1) this elements -->
            <domainObjectRenamingRule searchString="^T" replaceString=""/> <!-- (0..1) this elements -->
            <columnRenamingRule searchString="^vf_" replaceString=""/> <!-- (0..1) this elements -->

            <columnOverride column="create_time"
                            property="createDate"
                            javaType="java.time.LocalDateTime"
                            jdbcType="TIMESTAMP"/> <!-- (0..N) this elements -->
            <columnOverride column="birthday" javaType="java.time.LocalDate" jdbcType="DATE"/>
            <columnOverride column="remark2" javaType="java.lang.String" jdbcType="VARCHAR" isGeneratedAlways="true"/>

            <ignoreColumn column="remark3"/> <!-- (0..N) this elements -->
        </table>
    </context>
</generatorConfiguration>
